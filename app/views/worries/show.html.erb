<h3>悩み投稿者</h3>
<%= @worry.user.nickname %>
<%= @worry.title %>
<%= @worry.problem %>
<%= @worry.status %>

        <% if current_user.loved_by?(@worry.id) %>
          <td><%= link_to 'いいねを外す', destroy_love_path(@worry), method: :DELETE %> 
          <%# <%= @worry.love.count %> %>
           <%= @love_count %>
          </td>
        <% else %>
          <td><%= link_to 'いいね', create_love_path(@worry), method: :POST %> 
          <%# <%= @worry.loves.count %> %>
          <%= @love_count %>
          </td>
        <% end %>
        <td><%= link_to 'Show', @worry %></td>
        <%# <td><%= link_to 'Edit', worry_loves_path(@worry) %></td> %>
        <td><%= link_to 'Destroy', @worry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>



<div id="comments">
  <h4>＜コメント一覧＞</h4>
    <% @worry.comments.each do |comment| %>
      <div class="comment">
        <p class="user-info"><%= comment.user.nickname %>： </p>
        <p><%= comment.answer%></p>
      </div>
    <% end %>
</div>



<div class="comment-form">
    <%= form_with model: [@worry, @comment], id: "comment-form" do |f| %>
      <%= f.text_area :answer , class: "comment-text"%>
      <%= f.submit "コメントをする", class: "comment-submit" %>
    <% end %>
</div>

      <%=link_to 'もどる', indexmain_worry_path(current_user) , class:"back-btn" %>
